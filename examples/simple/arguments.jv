
; Run command: jlr examples/simple/arguments.jv -- --alpha --nobeta --gamma=yoyoyo
module arguments

import io

alpha = Bool(args.alpha)
beta = Bool(args.beta)
gamma = args.gamma

io.println(cat('alpha=', alpha))  ; alpha=1
io.println(cat('beta=', beta))    ; beta=None
io.println(cat('gamma=', gamma))  ; gamma=yoyoyo
